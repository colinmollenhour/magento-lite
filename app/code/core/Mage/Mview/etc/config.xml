<config>
    <modules>
        <Mage_Mview>
            <version>1.7.0.0</version>
        </Mage_Mview>
    </modules>
    <global>
        <models>
            <mview>
                <class>Mage_Mview_Model</class>
                <resourceModel>mview_resource</resourceModel>
            </mview>
            <mview_resource>
                <class>Mage_Mview_Model_Resource</class>
                <entities>
                    <metadata>
                        <table>mview_metadata</table>
                    </metadata>
                    <changelog>
                        <table>mview_changelog</table>
                    </changelog>
                </entities>
            </mview_resource>
        </models>
        <resources>
            <mview_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mview_write>
            <mview_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mview_read>
            <mview_setup>
                <setup>
                    <module>Mage_Mview</module>
                      <!--<class>Mage_Mview_Model_Resource_Setup</class>-->
                </setup>
            </mview_setup>
        </resources>
        <helpers>
            <mview>
                <class>Mage_Mview_Helper</class>
            </mview>
        </helpers>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Mview>
                    <files>
                        <default>Mview.csv</default>
                    </files>
                </Mage_Mview>
            </modules>
        </translate>
    </adminhtml>
</config>
