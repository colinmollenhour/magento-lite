                    <?php if (is_array($_log['license'])): ?>
                        <?php if ($_uri = $_log['license']['attribs']['uri']): ?>
                            <a href="<?php echo $_uri ?>" target="_blank">
                        <?php endif ?>
                        <?php echo $_log['license']['_content'] ?>
