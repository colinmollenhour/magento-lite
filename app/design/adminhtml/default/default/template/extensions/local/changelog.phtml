                            </a>
                        <?php endif ?>
                    <?php else: ?>
                        <?php echo $_log['license'] ?>
                    <?php endif ?>
                </td></tr>
                <tr><th><?php echo $this->__("Notes:") ?></th><td><?php echo nl2br($_log['notes']) ?></td></tr>
            </tbody>
        </table>
    </fieldset>
    <?php endforeach ?>
</div>
