<div class="entry-edit">
    <?php foreach ($this->getReleases() as $_log): ?>
    <div class="entry-edit-head">
        <h4 class="icon-head head-edit-form fieldset-legend"><?php echo $_log['version']['release'] ?> (<?php echo $_log['stability']['release'] ?>)</h4>
    </div>
    <fieldset>
        <legend><?php echo $_log['version']['release'] ?> (<?php echo $_log['stability']['release'] ?>)</legend>

        <table class="" cellspacing="5">
            <tbody>
                <tr><th><?php echo $this->__("Date:") ?></th><td><?php echo $_log['date'] ?></td></tr>
                <tr><th><?php echo $this->__("Version:") ?></th><td><?php echo $_log['version']['release'] ?> (<?php echo $_log['stability']['release'] ?>)</td></tr>
                <tr><th><?php echo $this->__("API:") ?></th><td><?php echo $_log['version']['api'] ?> (<?php echo $_log['stability']['api'] ?>)</td></tr>
